<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_register"
    app:startDestination="@id/codeScannerFragment">

    <fragment
        android:id="@+id/codeScannerFragment"
        android:name="rs.ac.bg.etf.diplomski.authenticationapp.app_setup.CodeScannerFragment"
        android:label="fragment_code_scanner"
        tools:layout="@layout/fragment_code_scanner" >
        <action
            android:id="@+id/action_codeScannerFragment_to_codeVerifierFragment"
            app:destination="@id/codeVerifierFragment" />
    </fragment>
    <fragment
        android:id="@+id/codeVerifierFragment"
        android:name="rs.ac.bg.etf.diplomski.authenticationapp.app_setup.CodeVerifierFragment"
        android:label="fragment_code_verifier"
        tools:layout="@layout/fragment_code_verifier" >
        <argument
            android:name="verificationId"
            app:argType="string" />
        <action
            android:id="@+id/action_codeVerifierFragment_to_userRegisterFragment"
            app:destination="@id/userRegisterFragment" />
        <argument
            android:name="documentId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/userRegisterFragment"
        android:name="rs.ac.bg.etf.diplomski.authenticationapp.app_setup.UserRegisterFragment"
        android:label="fragment_user_register"
        tools:layout="@layout/fragment_user_register" >
        <argument android:name="documentId"
            app:argType="string" />
        <action
            android:id="@+id/action_userRegisterFragment_to_pinRegisterFragment"
            app:destination="@id/pinRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/pinRegisterFragment"
        android:name="rs.ac.bg.etf.diplomski.authenticationapp.app_setup.PinRegisterFragment"
        android:label="fragment_pin_register"
        tools:layout="@layout/fragment_pin_register" >
        <action
            android:id="@+id/action_pinRegisterFragment_to_nav_graph_pin"
            app:destination="@id/nav_graph_pin" />
    </fragment>
    <include app:graph="@navigation/nav_graph_pin" />
</navigation>